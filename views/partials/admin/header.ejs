    <style>
        /* Fixed Sidebar */
        .sidebar {
            background-color: #f8f9fa;
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto; /* Allow scrolling in sidebar if needed */
            transition: transform 0.3s ease-in-out;
        }

        /* Sidebar links */
        .sidebar a {
            display: block;
            padding: 12px 20px;
            color: #333;
            transition: background 0.3s ease-in-out;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #4a90e2;
            color: white;
        }

        /* Navbar */
        .navbar {
            background-color: white;
            border-bottom: 1px solid #ddd;
        }

        /* Overlay (for mobile) */
        #overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 10;
        }

        /* Adjust Main Content */
        main {
            margin-left: 250px; /* Leave space for sidebar */
            flex: 1;
            overflow-y: auto; /* Allow scrolling */
            height: 100vh;
            padding: 20px;
        }

        /* Responsive Sidebar for Mobile */
        @media (max-width: 1024px) {
            .sidebar {
                transform: translateX(-100%);
                position: fixed;
                z-index: 20;
            }

            main {
                margin-left: 0; /* Remove margin for mobile view */
            }

            #menuToggle {
                display: block;
                position: absolute;
                top: 20px;
                left: 20px;
                z-index: 30;
                font-size: 24px;
            }

            #overlay.show {
                display: block;
            }
        }
    </style>
</head>
