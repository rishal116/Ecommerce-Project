<%- include("../../views/partials/admin/header") %>
<style>
   /* Breadcrumb Styling */
   .breadcrumb {
        display: flex;
        align-items: center;
        font-size: 14px;
        background-color: #F9FAFB; /* Light Gray Background */
        padding: 10px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .breadcrumb a {
        color: #4B5563; /* Dark Gray */
        text-decoration: none;
        margin-right: 8px;
        font-weight: 500;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    .breadcrumb span {
        color: #9CA3AF; /* Light Gray Text */
        margin-right: 8px;
    }

    /* Search Bar */
    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .search-box {
        width: 450px;
        border-radius: 50px;
        border: 1px solid #ccc;
        overflow: hidden;
        display: flex;
        align-items: center;
    }

    .search-box input {
        flex-grow: 1;
        padding: 10px;
        border: none;
        outline: none;
    }

    .search-box button {
        padding: 10px 20px;
        background-color: #4F46E5;
        color: white;
        border: none;
        border-radius: 0 50px 50px 0;
        cursor: pointer;
        transition: background 0.3s;
    }

    .search-box button:hover {
        background-color: #4338CA;
    }

    /* Table Styling */
    .table-container {
        width: 100%;
        overflow-x: auto;
        background: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table thead {
        background-color: #F3F4F6;
    }

    /* Buttons */
    .btn-action {
        display: inline-block;
        padding: 6px 12px;
        font-size: 14px;
        font-weight: 500;
        text-align: center;
        border-radius: 6px;
        text-decoration: none;
        transition: background 0.3s;
    }

    .btn-block {
        background-color: #DC2626;
        color: white;
    }

    .btn-block:hover {
        background-color: #B91C1C;
    }

    .btn-unblock {
        background-color: #16A34A;
        color: white;
    }

    .btn-unblock:hover {
        background-color: #15803D;
    }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-top: 20px;
    }

    .pagination .page-link {
        padding: 8px 12px;
        background: #F3F4F6;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s;
    }

    .pagination .page-link:hover {
        background: #D1D5DB;
    }

    .pagination .active {
        background: #4F46E5;
        color: white;
    }
</style>

<!-- Breadcrumb -->
<div class="breadcrumb">
    <a href="/admin">Dashboard</a>
    <span>â€º</span>
    <a href="/admin/users">Customers</a>
</div>

<!-- Search Bar -->
<div class="search-container">
    <form action="/admin/users/" method="get" class="search-box">
        <input type="text" placeholder="Search customers..." name="search">
        <button type="submit">Search</button>
    </form>
</div>

<!-- Customers Table -->
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone No</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < data.length; i++) { %>
            <tr>
                <td><%= data[i].name %></td>
                <td><%= data[i].email %></td>
                <td><%= data[i].phone %></td>
                <td>
                    <% if (data[i].isBlocked === false) { %>
                        <a href="/admin/blockCustomer?id=<%= data[i]._id %>" class="btn-action btn-block">Block</a>
                    <% } else { %>
                        <a href="/admin/unblockCustomer?id=<%= data[i]._id %>" class="btn-action btn-unblock">Unblock</a>
                    <% } %>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Pagination -->
<div class="container mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%=(i === currentPage) ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
        </ul>
    </nav>
</div>



<%- include("../../views/partials/admin/footer") %>
