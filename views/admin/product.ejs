<%- include("../../views/partials/admin/header") %>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
</head>

<div class="container mx-auto px-6 mt-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-700">Products</h2>
        <a href="/admin/addProducts" class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition">
            + Add Product
        </a>
    </div>

    <!-- Search Bar -->
    <div class="flex justify-center mb-6">
        <form action="" method="get" class="w-1/2 flex border border-gray-300 rounded-full overflow-hidden">
            <input type="text" class="w-full px-4 py-2 focus:outline-none" placeholder="Search products or brands" name="search">
            <button class="px-4 py-2 bg-blue-500 text-white hover:bg-blue-600 transition">Search</button>
        </form>
    </div>

    <!-- Product Table -->
    <div class="overflow-x-auto bg-white shadow-md rounded-lg p-4">
        <table class="w-full border-collapse border border-gray-300">
            <thead>
                <tr class="bg-gray-200 text-gray-700">
                    <th class="py-2 px-4 border">Product Name</th>
                    <th class="py-2 px-4 border">Brand</th>
                    <th class="py-2 px-4 border">Category</th>
                    <th class="py-2 px-4 border">Sale Price</th>
                    <th class="py-2 px-4 border">Offer Price</th>
                    <th class="py-2 px-4 border">Offer</th>
                    <th class="py-2 px-4 border">Quantity</th>
                    <th class="py-2 px-4 border">Action</th>
                    <th class="py-2 px-4 border">Edit</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    <td class="py-2 px-4 border">Sample Product</td>
                    <td class="py-2 px-4 border">Brand Name</td>
                    <td class="py-2 px-4 border">Category Name</td>
                    <td class="py-2 px-4 border">$50</td>
                    <td class="py-2 px-4 border">$40</td>
                    <td class="py-2 px-4 border">
                        <div class="flex justify-center gap-2">
                            <a href="#" class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 transition">Add Offer</a>
                            <a href="#" class="px-3 py-1 bg-gray-500 text-white rounded hover:bg-gray-600 transition">Remove</a>
                        </div>
                    </td>
                    <td class="py-2 px-4 border">100</td>
                    <td class="py-2 px-4 border">
                        <div class="flex justify-center gap-2">
                            <a href="#" class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 transition">Block</a>
                            <a href="#" class="px-3 py-1 bg-green-500 text-white rounded hover:bg-green-600 transition">Unblock</a>
                        </div>
                    </td>
                    <td class="py-2 px-4 border">
                        <a href="#" class="px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition">Edit</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

