<%- include("../../views/partials/user/header") %>
<title>Add New Address</title>

<style>
    /* Base styles for the page */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    .main-container {
        display: flex;
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Sidebar Styles */
    .sidebar {
        width: 250px;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .sidebar h3 {
        font-size: 1.5rem;
        color: #333;
        margin-bottom: 15px;
    }

    .sidebar a {
        display: block;
        padding: 10px;
        color: #333;
        text-decoration: none;
        margin-bottom: 10px;
        border-radius: 5px;
    }

    .sidebar a:hover {
        background-color: #f1f1f1;
    }

    .sidebar a.active {
        background-color: #e8f0fe;
        color: #1967d2;
        font-weight: 500;
    }


    /* Form Section */
    .form-section {
        flex: 1;
        background-color: #fff;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        margin-left: 20px;
    }

    .form-section h4 {
        font-size: 1.75rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-size: 1rem;
        margin-bottom: 8px;
        color: #333;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 5px;
        box-sizing: border-box;
    }

    .form-group input:focus {
        border-color: #1967d2;
        outline: none;
    }

    button[type="submit"] {
        padding: 12px 25px;
        background-color: #1967d2;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        width: 100%;
        border: none;
    }

    button[type="submit"]:hover {
        background-color: #1558a3;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .main-container {
            flex-direction: column;
        }

        .form-section {
            margin-left: 0;
        }
    }
</style>

<div class="main-container">

      <!-- Sidebar -->
      <div class="sidebar">
        <h3>Profile Settings</h3>
        <a href="/userProfile">Personal Information</a>
        <a href="/myAddress" class="active">Your Addresses</a>
        <a href="/wishlist">Wishlist</a>
        <a href="/myorders">Your Orders</a>
    </div>
    <!-- Add Address Form Section -->
    <div class="form-section">
        <h4>Add New Address</h4>
        <form method="POST" action="/addAddress" id="addressForm">
            <!-- Address Type -->
            <div class="form-group">
                <label for="address-type">Address Type</label>
                <input type="text" id="address-type" name="addressType" required>
            </div>

            <!-- Other Fields -->
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="city">City</label>
                <input type="text" id="city" name="city" required>
            </div>

            <div class="form-group">
                <label for="landmark">Landmark</label>
                <input type="text" id="landmark" name="landMark" required>
            </div>

            <div class="form-group">
                <label for="state">State</label>
                <input type="text" id="state" name="state" required>
            </div>

            <div class="form-group">
                <label for="postal-code">Pin Code</label>
                <input type="text" id="postal-code" name="pincode" required>
            </div>

            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" id="phone" name="phone" required pattern="^\+?\d{10,15}$" title="Enter a valid phone number">
            </div>

            <div class="form-group">
                <label for="alternate-phone">Alternate Phone</label>
                <input type="text" id="alternate-phone" name="altPhone" pattern="^\+?\d{10,15}$" title="Enter a valid phone number">
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit">Add Address</button>
            </div>
        </form>
    </div>

  
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
// JavaScript validation for the Add Address form
document.getElementById('addressForm').addEventListener('submit', function(event) {
    if (!validateForm()) {
        event.preventDefault();
    }
});

function validateForm() {
    let isValid = true;
    const requiredFields = ["address-type", "name", "city", "landmark", "state", "postal-code", "phone"];
    const namePattern = /^[A-Za-z\s]+$/;
    const pincodePattern = /^\d{6}$/;
    const phonePattern = /^\d{10}$/;
    const altPhonePattern = /^\d{10}$/;
    
    requiredFields.forEach(function(field) {
        const input = document.getElementById(field);
        const inputValue = input.value.trim();

        if (inputValue === "") {
            showAlert('Error', `${field.replace(/-/g, ' ')} is required.`);
            isValid = false;
        }
    });

    const name = document.getElementById('name').value;
    const city = document.getElementById('city').value;
    const landmark = document.getElementById('landmark').value;
    const state = document.getElementById('state').value;
    const pincode = document.getElementById('postal-code').value;
    const phone = document.getElementById('phone').value;
    const altPhone = document.getElementById('alternate-phone').value;

    if (!namePattern.test(name) || !namePattern.test(city) || !namePattern.test(landmark) || !namePattern.test(state)) {
        showAlert('Error', 'Name, City, Landmark, and State should contain alphabets only.');
        isValid = false;
    }
    if (!pincodePattern.test(pincode)) {
        showAlert('Error', 'Pincode should be a 6-digit number.');
        isValid = false;
    }
    if (!phonePattern.test(phone)) {
        showAlert('Error', 'Phone number should be a 10-digit number.');
        isValid = false;
    }
    if (altPhone && !altPhonePattern.test(altPhone)) {
        showAlert('Error', 'Alternate phone number should be a 10-digit number.');
        isValid = false;
    }
    if (phone === altPhone && altPhone !== "") {
        showAlert('Error', 'Phone and alternate phone numbers should be different.');
        isValid = false;
    }

    return isValid;
}

function showAlert(title, text) {
    Swal.fire({
        title: title,
        text: text,
        icon: 'error'
    });
}
</script>

