<%- include("../../views/partials/user/header") %>
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #F8F8F8;
    margin: 0;
  }
  
  /* Main Container */
  .main-container {
    max-width: 1100px;
    margin: auto;
    padding: 20px;
  }
  
  /* Topbar */
  .shop-topbar {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }
  
  /* Search Bar */
  .search-form {
    display: flex;
    width: 420px;
    background: #fff;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
  }
  
  .search-input {
    flex: 1;
    padding: 12px;
    font-size: 16px;
    border: none;
    outline: none;
  }
  
  .search-button {
    padding: 10px 20px;
    background: #FF3F6C;
    color: #fff;
    font-weight: bold;
    border: none;
    cursor: pointer;
    transition: 0.3s;
  }
  
  .search-button:hover {
    background: #E63A5F;
  }
  
  /* Layout */
  .product-list-container {
    display: flex;
    gap: 15px;
  }
  
/* Sidebar Styling */
.sidebar {
  background: #fff;
  padding: 15px;
  border-radius: 10px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  width: 220px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Section Titles */
.filter-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
  padding-bottom: 6px;
  border-bottom: 2px solid #FF3F6C;
  text-align: center;
}

/* Filter List */
.filter-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.filter-item {
  display: block;
  padding: 10px 12px;
  text-decoration: none;
  color: #333;
  font-size: 14px;
  transition: all 0.3s ease;
  border-radius: 6px;
  background: #f9f9f9;
}

.filter-item:hover,
.filter-item.active {
  background: #FF3F6C;
  color: #fff;
  font-weight: bold;
  transform: scale(1.05);
}

/* Price Filter */
.price-filter {
  background: #fff;
  padding: 15px;
  border-radius: 10px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.price-options {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.price-button {
  background: linear-gradient(135deg, #FF3F6C, #FF5A7C);
  color: white;
  font-size: 14px;
  font-weight: bold;
  padding: 10px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  text-align: center;
}

.price-button:hover {
  background: linear-gradient(135deg, #E63A5F, #D62E52);
  box-shadow: 0 3px 8px rgba(255, 63, 108, 0.3);
  transform: scale(1.05);
}

.price-button:active {
  background: #D62E52;
  transform: scale(0.98);
}

  
  /* Product Grid */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 15px;
    flex: 1;
  }
  
  .product-card {
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
    padding: 15px;
    display: flex;
    flex-direction: column;
  }
  
  .product-card:hover {
    transform: scale(1.02);
  }
  
  .product-card img {
    width: 100%;
    height: 220px;
    object-fit: contain;
    border-bottom: 1px solid #ddd;
  }
  
  /* Product Info */
  .product-info {
    flex-grow: 1;
    margin-top: 10px;
  }
  
  .product-info h4 {
    font-size: 14px;
    color: #333;
    font-weight: bold;
  }
  
  .product-info p {
    font-size: 13px;
    color: #666;
  }
  
  /* Add to Cart Button */
  .add-to-cart-btn {
    background: linear-gradient(135deg, #FF3F6C, #FF5A7C);
    color: white;
    font-weight: 600;
    font-size: 13px;
    padding: 10px;
    border: none;
    width: 100%;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    text-transform: uppercase;
  }
  
  .add-to-cart-btn:hover {
    background: linear-gradient(135deg, #E63A5F, #D62E52);
    box-shadow: 0 3px 8px rgba(255, 63, 108, 0.3);
    transform: scale(1.05);
  }
  
  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 15px;
  }
  
  .page-item {
    list-style: none;
    margin: 0 4px;
  }
  
  .page-link {
    display: block;
    padding: 8px 12px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    color: #333;
    background: #fff;
    transition: 0.3s;
  }
  
  .page-item.active .page-link {
    background: #FF3F6C;
    color: #fff;
  }
  
  .page-link:hover {
    background: #E63A5F;
    color: #fff;
  }

  .wishlist-btn {
  margin-top: 10px;
  background: #fff;
  color: #FF3F6C;
  font-size: 14px;
  font-weight: bold;
  padding: 8px;
  border: 2px solid #FF3F6C;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
  width: 100%;
  text-align: center;
}

.wishlist-btn:hover {
  background: #FF3F6C;
  color: #fff;
}

.wishlist-btn.active {
  background: #FF3F6C;
  color: #fff;
}

  </style>
<div class="main-container">
  <section class="shop-page">
    
    <!-- Top Search Bar -->
    <div class="shop-topbar">
      <form action="/search" method="POST" class="search-form">
        <input type="text" name="query" placeholder="Search items..." class="search-input" />
        <button type="submit" class="search-button">Search</button>
      </form>
    </div>

    <div class="product-list-container">

      <!-- Sidebar Filters -->
      <aside class="sidebar">
        <div class="filter-section">
          <div class="filter-title">Categories</div>
          <ul class="filter-list">
            <% for (let i = 0; i < category.length; i++) { %>
              <li><a href="/filter?category=<%= category[i]._id %>" class="filter-item"><%= category[i].name %></a></li>
            <% } %>
          </ul>
        </div>
        
        <div class="filter-section">
          <div class="filter-title">Brands</div>
          <ul class="filter-list">
            <% for (let i = 0; i < brand.length; i++) { %>
              <li><a href="/filter?brand=<%= brand[i]._id %>" class="filter-item"><%= brand[i].brandName %></a></li>
            <% } %>
          </ul>
        </div>

        <div class="price-filter">
          <div class="filter-title">Filter by Price</div>
          <form id="price-filter-form">
            <div class="price-options">
              <a href="/filterPrice?gt=0&lt=500 " type="button" class="price-button">Under ₹500</a>
              <a href="/filterPrice?gt=500&lt=1000" type="button" class="price-button">₹500 - ₹1000</a>
              <a href="/filterPrice?gt=1000&lt=1500" type="button" class="price-button">₹1000 - ₹1500</a>
              <a href="/filterPrice?gt=1500&lt=100000" type="button" class="price-button">Above ₹1500</a>
            </div>
          </form>
        </div>
      </aside>

      <!-- Product Grid -->
      <main class="product-grid">
        <% for (let i = 0; i < products.length; i++) { %>
          <div class="product-card">
            <a href="/productDetails?id=<%= products[i]._id %>">
              <img src="/uploads/re-image/<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>" />
            </a>
            <div class="product-info">
              <h4><%= products[i].productName %></h4>
              <p>Brand: <%= products[i].brand %></p>
              <p>Price: ₹<%= products[i].salePrice.toLocaleString('en-IN') %> 
                <strike>₹<%= products[i].regularPrice.toLocaleString('en-IN') %></strike>
              </p>
            </div>
            <div class="product-actions">
              <button class="add-to-cart-btn">Add to Cart</button>
              <button class="wishlist-btn" data-product-id="<%= products[i]._id %>">
                ❤️ Wishlist
              </button>
            </div>
            
          </div>
        <% } %>
      </main>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%=(i === currentPage) ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>

  </section>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<%- include("../../views/partials/user/footer") %>
