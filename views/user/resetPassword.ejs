<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card-login {
            max-width: 400px;
            margin: 80px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            background: #fff;
        }

        .form-control {
            height: 45px;
            border-radius: 8px;
            padding-right: 40px;
        }

        .input-group-text {
            background: none;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            height: 45px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
        }

        .text-danger {
            font-size: 13px;
            margin-top: 5px;
        }
    </style>
</head>
<body>

<section class="content-main">
    <div class="card mx-auto card-login">
        <div class="card-body">
            <h4 class="card-title mb-4 text-center">Change Password</h4>
            <form onsubmit="return validateForm()" method="post" action="/reset-password">
                <div class="mb-3 position-relative">
                    <div class="input-group">
                        <input class="form-control" name="newPass1" id="newPass1" placeholder="Enter new password" type="password" required>
                        <span class="input-group-text" onclick="togglePassword('newPass1', this)">
                            <i class="bi bi-eye-slash"></i>
                        </span>
                    </div>
                    <div id="newPass1Error" class="text-danger"></div>
                </div>
                <div class="mb-3 position-relative">
                    <div class="input-group">
                        <input class="form-control" name="newPass2" id="newPass2" placeholder="Re-enter new password" type="password" required>
                        <span class="input-group-text" onclick="togglePassword('newPass2', this)">
                            <i class="bi bi-eye-slash"></i>
                        </span>
                    </div>
                    <div id="newPass2Error" class="text-danger"></div>
                </div>
                <div class="mb-4">
                    <button type="submit" class="btn btn-primary w-100">Change Password</button>
                </div>
                <% if (locals.message && message.length > 0) { %>
                <div id="alertMessage" class="alert alert-danger text-center">
                    <%= message %>
                </div>
                <% } %>
            </form>
        </div>
    </div>
</section>

<script>
function validateForm() {
    let valid = true;
    const newPass1 = document.getElementById('newPass1');
    const newPass2 = document.getElementById('newPass2');
    const newPass1Error = document.getElementById('newPass1Error');
    const newPass2Error = document.getElementById('newPass2Error');

    newPass1Error.textContent = '';
    newPass2Error.textContent = '';

    if (!newPass1.value.trim()) {
        newPass1Error.textContent = 'Password cannot be empty.';
        valid = false;
    } else if (newPass1.value.length < 6) {
        newPass1Error.textContent = 'Password must be at least 6 characters long.';
        valid = false;
    }

    if (!newPass2.value.trim()) {
        newPass2Error.textContent = 'Please re-enter your password.';
        valid = false;
    } else if (newPass2.value !== newPass1.value) {
        newPass2Error.textContent = 'Passwords do not match.';
        valid = false;
    }

    if (!valid) {
        return false;
    }

    return true; // Allow form submission
}


function togglePassword(fieldId, iconElement) {
    const field = document.getElementById(fieldId);
    if (field.type === "password") {
        field.type = "text";
        iconElement.innerHTML = '<i class="bi bi-eye"></i>';
    } else {
        field.type = "password";
        iconElement.innerHTML = '<i class="bi bi-eye-slash"></i>';
    }
}
</script>

<!-- Bootstrap Icons for Eye Toggle -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</body>
</html>
