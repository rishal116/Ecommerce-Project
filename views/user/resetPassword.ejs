<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password | TrendyThreads</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --myntra-pink: #ff3f6c;
            --myntra-light-pink: #fff0f4;
            --myntra-border: #d4d5d9;
            --myntra-text-primary: #282c3f;
            --myntra-text-secondary: #94969f;
            --myntra-success: #03a685;
            --myntra-warning: #ff905a;
            --myntra-danger: #ff5722;
        }
        
        body {
            background-color: #FDFDFD;
            font-family: 'Assistant', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
            color: var(--myntra-text-primary);
            margin: 0;
            padding: 0;
        }

        .navbar {
            box-shadow: 0 4px 12px 0 rgba(0, 0, 0, 0.05);
            background-color: #fff;
            height: 80px;
            padding: 0;
        }

        .navbar-brand {
            font-size: 32px;
            font-weight: 700;
            color: var(--myntra-pink);
            letter-spacing: -0.5px;
            padding: 0;
        }

        .container-main {
            max-width: 440px;
            margin: 60px auto;
        }

        .card-password {
            border: none;
            box-shadow: 0 2px 16px rgba(40, 44, 63, 0.1);
            border-radius: 4px;
            padding: 32px 36px;
            background: #fff;
        }

        .card-title {
            font-size: 24px;
            font-weight: 600;
            color: var(--myntra-text-primary);
            margin-bottom: 30px;
            text-align: center;
        }

        .form-label {
            font-size: 13px;
            font-weight: 600;
            color: var(--myntra-text-secondary);
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            height: 44px;
            border: 1px solid var(--myntra-border);
            border-radius: 4px;
            padding: 8px 16px;
            font-size: 15px;
            transition: all 0.2s ease;
        }

        .form-control:focus {
            border-color: var(--myntra-text-primary);
            box-shadow: none;
        }

        .input-group-text {
            background: none;
            border: none;
            color: var(--myntra-text-secondary);
            cursor: pointer;
            position: absolute;
            right: 12px;
            top: 34px;
            z-index: 10;
            transition: color 0.2s ease;
        }
        
        .input-group-text:hover {
            color: var(--myntra-text-primary);
        }

        .password-container {
            position: relative;
            margin-bottom: 8px;
        }

        .btn-password-change {
            height: 50px;
            background-color: var(--myntra-pink);
            border: none;
            border-radius: 4px;
            font-size: 15px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 4px rgba(255, 63, 108, 0.2);
            margin-top: 10px;
        }

        .btn-password-change:hover {
            background-color: #e93963;
            box-shadow: 0 4px 8px rgba(255, 63, 108, 0.3);
            transform: translateY(-2px);
        }
        
        .btn-password-change:active {
            transform: translateY(0);
        }

        .text-danger {
            font-size: 12px;
            margin-top: 6px;
            color: var(--myntra-pink) !important;
            font-weight: 500;
        }

        .password-strength {
            display: flex;
            margin-top: 12px;
            margin-bottom: 8px;
        }

        .strength-meter {
            height: 6px;
            flex: 1;
            background-color: #eaeaec;
            margin-right: 5px;
            border-radius: 3px;
            transition: background-color 0.3s ease;
        }

        .strength-meter.active.weak {
            background-color: var(--myntra-danger);
        }
        
        .strength-meter.active.medium {
            background-color: var(--myntra-warning);
        }
        
        .strength-meter.active.strong {
            background-color: var(--myntra-success);
        }
        
        #strengthText {
            font-size: 13px;
            font-weight: 500;
            margin-bottom: 16px;
            transition: color 0.3s ease;
        }
        
        .password-info {
            background-color: var(--myntra-light-pink);
            border-radius: 4px;
            padding: 12px 16px;
            margin-bottom: 24px;
            font-size: 13px;
            color: var(--myntra-text-primary);
        }
        
        .password-info ul {
            padding-left: 20px;
            margin-bottom: 0;
        }
        
        .password-info li {
            margin-bottom: 4px;
        }
        
        .alert {
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
        }
        h1.navbar-brand {
            font-size: 36px;
            font-weight: 700;
            color: var(--myntra-pink);
            letter-spacing: -0.5px;
            margin: 0 auto 24px;
            text-align: center;
            display: block;
            position: relative;
        }
        h1.navbar-brand:after {
            content: '';
            display: block;
            width: 40px;
            height: 3px;
            background-color: var(--myntra-pink);
            margin: 12px auto 0;
            border-radius: 2px;
        }
</style>
</head>
<body>



<div class="container container-main">
    <div class="card card-password">
        <h1 class="navbar-brand text-center mb-4">TrendyThreads</h1>
        <h4 class="card-title">Change Password</h4>
        
        <div class="password-info">
            <p class="mb-2">For a strong password:</p>
            <ul>
                <li>Use at least 8 characters</li>
                <li>Include uppercase & lowercase letters</li>
                <li>Add numbers and special characters</li>
            </ul>
        </div>
        
        <form onsubmit="return validateForm()" method="post" action="/reset-password">
            <div class="mb-3">
                <label for="newPass1" class="form-label">New Password</label>
                <div class="password-container">
                    <input class="form-control" name="newPass1" id="newPass1" placeholder="Minimum 6 characters" type="password" required onkeyup="checkPasswordStrength()">
                    <span class="input-group-text" onclick="togglePassword('newPass1', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
                <div class="password-strength">
                    <div id="strength1" class="strength-meter"></div>
                    <div id="strength2" class="strength-meter"></div>
                    <div id="strength3" class="strength-meter"></div>
                </div>
                <div id="strengthText" class="mb-2"></div>
                <div id="newPass1Error" class="text-danger"></div>
            </div>
            <div class="mb-4">
                <label for="newPass2" class="form-label">Confirm Password</label>
                <div class="password-container">
                    <input class="form-control" name="newPass2" id="newPass2" placeholder="Re-enter your password" type="password" required onkeyup="checkPasswordMatch()">
                    <span class="input-group-text" onclick="togglePassword('newPass2', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
                <div id="newPass2Error" class="text-danger"></div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-password-change w-100">Change Password</button>
            </div>
            <% if (locals.message && message.length > 0) { %>
            <div id="alertMessage" class="alert alert-danger text-center">
                <%= message %>
            </div>
            <% } %>
        </form>
    </div>
</div>

<script>
function validateForm() {
    let valid = true;
    const newPass1 = document.getElementById('newPass1');
    const newPass2 = document.getElementById('newPass2');
    const newPass1Error = document.getElementById('newPass1Error');
    const newPass2Error = document.getElementById('newPass2Error');

    newPass1Error.textContent = '';
    newPass2Error.textContent = '';

    if (!newPass1.value.trim()) {
        newPass1Error.textContent = 'Password cannot be empty.';
        valid = false;
    } else if (newPass1.value.length < 6) {
        newPass1Error.textContent = 'Password must be at least 6 characters long.';
        valid = false;
    }

    if (!newPass2.value.trim()) {
        newPass2Error.textContent = 'Please re-enter your password.';
        valid = false;
    } else if (newPass2.value !== newPass1.value) {
        newPass2Error.textContent = 'Passwords do not match.';
        valid = false;
    }

    if (!valid) {
        return false;
    }
    
    // Show success message
    Swal.fire({
        title: 'Success!',
        text: 'Your password has been changed successfully.',
        icon: 'success',
        confirmButtonColor: '#ff3f6c',
        confirmButtonText: 'Continue'
    });

    return true; // Allow form submission
}

function togglePassword(fieldId, iconElement) {
    const field = document.getElementById(fieldId);
    if (field.type === "password") {
        field.type = "text";
        iconElement.innerHTML = '<i class="bi bi-eye"></i>';
    } else {
        field.type = "password";
        iconElement.innerHTML = '<i class="bi bi-eye-slash"></i>';
    }
}

function checkPasswordMatch() {
    const newPass1 = document.getElementById('newPass1').value;
    const newPass2 = document.getElementById('newPass2').value;
    const newPass2Error = document.getElementById('newPass2Error');
    
    if(newPass2.length > 0) {
        if(newPass1 !== newPass2) {
            newPass2Error.textContent = 'Passwords do not match.';
        } else {
            newPass2Error.textContent = '';
        }
    }
}

function checkPasswordStrength() {
    const password = document.getElementById('newPass1').value;
    const strength1 = document.getElementById('strength1');
    const strength2 = document.getElementById('strength2');
    const strength3 = document.getElementById('strength3');
    const strengthText = document.getElementById('strengthText');
    
    // Reset strength indicators
    strength1.classList.remove('active', 'weak', 'medium', 'strong');
    strength2.classList.remove('active', 'weak', 'medium', 'strong');
    strength3.classList.remove('active', 'weak', 'medium', 'strong');
    
    if (password.length === 0) {
        strengthText.textContent = '';
        return;
    }
    
    // Criteria
    const hasNumber = /\d/.test(password);
    const hasSpecial = /[!@#$%^&*(),.?":{}|<>]/.test(password);
    const hasUppercase = /[A-Z]/.test(password);
    
    // Calculate strength
    let score = 0;
    if (password.length >= 6) score++;
    if (password.length >= 8) score++;
    if (hasNumber) score++;
    if (hasSpecial) score++;
    if (hasUppercase) score++;
    
    // Update strength meter
    if (password.length > 0) {
        strength1.classList.add('active');
        strength1.classList.add('weak');
    }
    
    if (score >= 3) {
        strength2.classList.add('active');
        strength2.classList.add('medium');
    }
    
    if (score >= 5) {
        strength3.classList.add('active');
        strength3.classList.add('strong');
    }
    
    // Update text
    if (score <= 2) {
        strengthText.textContent = 'Weak password';
        strengthText.style.color = '#ff5722';
    } else if (score <= 4) {
        strengthText.textContent = 'Medium strength password';
        strengthText.style.color = '#ff905a';
    } else {
        strengthText.textContent = 'Strong password';
        strengthText.style.color = '#03a685';
    }
}
</script>

<!-- Bootstrap Icons for Eye Toggle -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
