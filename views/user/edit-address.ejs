<%- include("../../views/partials/user/header") %>

<!-- Container for Edit Address -->
<div class="container mt-5">
   <h3 class="text-center mb-4" style="color: #046963; font-weight: bold;">Edit User Address</h3>
   
   <!-- Address Form -->
   <form id="addressForm" method="POST" action="/editAddress?id=<%= address._id.toLocaleString() %>" class="border p-4 shadow-lg rounded bg-light">
       <!-- Address Information -->
       <div class="row mb-3">
           <div class="form-group col-md-6">
               <label for="addressType" class="form-label">Address Type:</label>
               <input type="text" class="form-control" value="<%= address.addressType %>" id="addressType" name="addressType" required>
           </div>
           <div class="form-group col-md-6">
               <label for="name" class="form-label">Name:</label>
               <input type="text" class="form-control" value="<%= address.name %>" id="name" name="name" required>
           </div>
       </div>

       <!-- City, Landmark, State -->
       <div class="row mb-3">
           <div class="form-group col-md-6">
               <label for="city" class="form-label">City:</label>
               <input type="text" class="form-control" value="<%= address.city %>" id="city" name="city" required>
           </div>
           <div class="form-group col-md-6">
               <label for="landMark" class="form-label">Landmark:</label>
               <input type="text" class="form-control" value="<%= address.landMark %>" id="landMark" name="landMark" required>
           </div>
       </div>

       <!-- State and Pincode -->
       <div class="row mb-3">
           <div class="form-group col-md-6">
               <label for="state" class="form-label">State:</label>
               <input type="text" class="form-control" value="<%= address.state %>" id="state" name="state" required>
           </div>
           <div class="form-group col-md-6">
               <label for="pincode" class="form-label">Pincode:</label>
               <input type="number" class="form-control" value="<%= address.pincode %>" id="pincode" name="pincode" required>
           </div>
       </div>

       <!-- Phone and Alternate Phone -->
       <div class="row mb-3">
           <div class="form-group col-md-6">
               <label for="phone" class="form-label">Phone:</label>
               <input type="number" class="form-control" value="<%= address.phone %>" id="phone" name="phone" required>
           </div>
           <div class="form-group col-md-6">
               <label for="altPhone" class="form-label">Alternate Phone:</label>
               <input type="number" class="form-control" value="<%= address.altPhone %>" id="altPhone" name="altPhone" required>
           </div>
       </div>

       <!-- Submit Button -->
       <div class="text-center">
           <button type="submit" id="submitButton" class="btn btn-primary w-50">Save Changes</button>
       </div>
   </form>
</div>

<!-- Custom Script for Form Validation -->
<script>
    document.getElementById('submitButton').addEventListener('click', function (event) {
        if (!validateForm()) {
            event.preventDefault();
        }
    });

    function validateForm() {
        let isValid = true;
        const requiredFields = ["addressType", "name", "city", "landMark", "state", "pincode", "phone", "altPhone"];
        const phoneRegex = /^[6-9]\d{9}$/; // Indian phone numbers start with 6-9 and have 10 digits
        const pincodeRegex = /^\d{6}$/; // Pincode must be exactly 6 digits
        const nameRegex = /^[A-Za-z\s]+$/; // Name must contain only letters and spaces
        const cityStateRegex = /^[A-Za-z\s]+$/; // City & State must contain only letters and spaces

        for (let field of requiredFields) {
            const input = document.getElementById(field);
            const value = input.value.trim();

            if (value === "") {
                Swal.fire({
                    title: 'Error',
                    text: `Please fill all fields.`,
                    icon: 'error'
                });
                return false;
            }

            if (field === "phone" || field === "altPhone") {
                if (!phoneRegex.test(value)) {
                    Swal.fire({
                        title: 'Invalid Input',
                        text: `${field === "phone" ? "Phone" : "Alternate Phone"} must be a valid 10-digit number starting with 6-9.`,
                        icon: 'error'
                    });
                    return false;
                }
            }

            if (field === "pincode") {
                if (!pincodeRegex.test(value)) {
                    Swal.fire({
                        title: 'Invalid Input',
                        text: 'Pincode must be exactly 6 digits.',
                        icon: 'error'
                    });
                    return false;
                }
            }

            if (field === "name") {
                if (!nameRegex.test(value)) {
                    Swal.fire({
                        title: 'Invalid Input',
                        text: 'Name should only contain letters and spaces.',
                        icon: 'error'
                    });
                    return false;
                }
            }

            if (field === "city" || field === "state") {
                if (!cityStateRegex.test(value)) {
                    Swal.fire({
                        title: 'Invalid Input',
                        text: `${field} should only contain letters and spaces.`,
                        icon: 'error'
                    });
                    return false;
                }
            }
        }
        return true;
    }
</script>


